---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/astroComponents/Hero.astro';
import Views from '../components/astroComponents/Views.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<Hero/>
		<Views/>
		<div class="contact">
			<h2>Let's work together.</h2>
			<a href="https://new-portfolio-eight-rust.vercel.app/">Get in touch</a>
		</div>
	</main>
</Layout>

<style>
	main{
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	.contact{
		height: 250px;
		max-width: 100vw;

		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.contact > h2{
		font-size: 2.3rem;
		font-weight: bolder;
	}

	.contact > a{
		color: #7f7f7f;
		opacity: 0.9;
		font-size: 2.2rem;
		text-decoration: none;
		font-weight: bolder;
		margin-top: 10px;
		transition: opacity 0.3s ease-out;
	}

	.contact > a:hover {
		opacity: 0.5;
	}

	@media only screen and (max-width: 480px) {

	}
</style>
