---
import Layout from "../../layouts/Layout.astro"
---


<Layout title="contact">
    <div class="contact">
        <h1>Let's work together.</h1>
        <a href="#">Get in touch.</a>
    </div>
</Layout>



<style>
    .contact{
        height: 100vh;
        max-width: 100vw;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .contact > h1{
        font-size: 5rem;
        font-weight: lighter;
        margin-bottom: 30px;
    }

    .contact > a{
        text-decoration: none;
        color: #7f7f7f;
        font-size: 3rem;
        transition: all 0.2s ease-in-out;
    }

    .contact > a:hover {
        opacity: 0.6;
    }

    @media only screen and (max-width: 480px) {
        .contact{
        height: 100vh;
        max-width: 100vw;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .contact > h1{
        font-size: 2.4rem;
        font-weight: bolder;
        margin-bottom: 30px;
    }

    .contact > a{
        text-decoration: none;
        color: #7f7f7f;
        font-size: 2.3rem;
        transition: all 0.2s ease-in-out;
        font-weight: bolder;
    }
    }
</style>